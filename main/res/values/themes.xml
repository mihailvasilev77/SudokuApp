<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme -->
    <style name="Theme.SudokuApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary app colors -->
        <item name="colorPrimary">@color/sudoku_solved</item>
        <item name="colorPrimaryVariant">@color/sudoku_solved</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@color/sudoku_solved</item>

        <!-- Splash Screen Theme reference -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_sudoku_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SudokuApp</item>
    </style>

</resources>
